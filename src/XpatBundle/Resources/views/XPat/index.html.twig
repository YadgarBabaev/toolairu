{% extends '::adminBase.html.twig' %}
{% block content_header %}
    <h1>
        {{ refName }}
        <small>Список</small>
    </h1>
{% endblock content_header %}
{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <a class="btn btn-primary" href="{{ path(prefix~'new') }}">
                Добавить <i class="fa fa-fw fa-plus-square-o"></i>
            </a>
        </div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Дата добавления</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td><a href="{{ path(prefix~'edit', { 'id': entity.id }) }}" >{{ entity.name }}</a></td>
                    <td>{{ entity.createDate|date('d.m.Y H:i:s') }}</td>
                    <td>{{  entity.statusString  }}</td>
                    <td>
                        <a href="{{ path(prefix~'delete',{'id': entity.id }) }}" class="btn btn-danger btn-md">
                            Удалить
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
