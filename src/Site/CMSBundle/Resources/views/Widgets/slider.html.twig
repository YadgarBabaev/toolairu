{% extends "CMSBundle:Widgets:layout.html.twig" %}
{% block title %}
    {% if widget.hideTitle %}
        <div class="cms_widget_title">
            <h4>{{ widget.title }}</h4>
        </div>
    {% endif %}
{% endblock title %}
{% block widget %}
    <div class="cms_widget_content">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel"
             data-interval="{% if widget.params.SliderSpeed is defined %}{{ widget.params.SliderSpeed }}{% else %}3000{% endif %}">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% for sliderImage in widget.sliderImages %}
                    <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index-1 }}"
                        {% if loop.index == 1 %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                {% for sliderImage in widget.sliderImages %}
                    <div class="item{% if loop.index == 1 %} active{% endif %}">
                        <img src="/images/slider/{{ sliderImage.logo }}" class="slider-image" alt="">
                        <div class="carousel-caption">
                            {% if widget.params.SliderTitle is defined and widget.params.SliderTitle == 1 %}
                                <div class="col-sm-4 col-sm-offset-1">
                                    {{ sliderImage.title|raw }}
                                </div>
                            {% endif %}
                            {% if widget.params.SliderHref is defined and widget.params.SliderHref == 1 %}
                                <div class="col-sm-3 col-sm-offset-2">
                                    <button class="btn btn-toolai">Shop now</button>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock widget %}