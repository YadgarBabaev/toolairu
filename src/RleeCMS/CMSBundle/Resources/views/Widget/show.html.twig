{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Widget</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Hidetitle</th>
                <td>{{ entity.hideTitle }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Html</th>
                <td>{{ entity.html }}</td>
            </tr>
            <tr>
                <th>Params</th>
                <td>{{ entity.params }}</td>
            </tr>
            <tr>
                <th>Orderning</th>
                <td>{{ entity.orderning }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entity.position }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('widget') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('widget_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
