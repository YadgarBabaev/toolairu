            </tr>
            <tr>
                <th>Orderning</th>
                <td>{{ entity.orderning }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ entity.lft }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
