{% extends '::adminBase.html.twig' %}
{% block content_header %}
    <h1>CMS<small>Типы меню</small></h1>
{% endblock content_header %}
{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <a class="btn btn-primary" href="{{ path('admin_cms_menutype_new') }}">
                Добавить <i class="fa fa-fw fa-plus-square-o"></i>
            </a>
            <a class="btn btn-default" href="{{ path('admin_cms') }}">Назад <i class="fa fa-fw fa-undo"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td><a href="{{ path('admin_cms_menutype_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                    <td>{{ entity.status }}</td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('admin_cms_menutype_delete', { 'id': entity.id }) }}">Удалить <i class="fa fa-fw fa-minus-square-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
