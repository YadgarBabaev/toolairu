{% trans_default_domain 'FOSUserBundle' %}
<style>
    .reg-form .gender .radio{
        display: inline-block;
        margin: 0;
    }
    .reg-form .gender .radio label{
        display: inherit;
        padding-left: 34px;
    }
    .reg-form input[type="radio"]{
        width: inherit;
        margin-left: -20px;
    }
</style>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

<div class="reg-form">
    <hgroup>
        <div class="container-fluid">
            <h2>{{ 'Register'|trans }}</h2>
        </div>
    </hgroup>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3 class="text-center">{{ 'Информация о покупателе'|trans }}:</h3>
                {#{{ form_widget(form) }}#}
                <label class="text-center">
                    {#<p>{{ 'Имя'|trans }}</p>#}
                    {#{{ form_errors(form.name) }}#}
                    {{ form_row(form.name) }}
                </label>
                <label class="text-center">
                    {#<p>{{ 'Фамилия'|trans }}</p>#}
                    {#{{ form_errors(form.fName) }}#}
                    {{ form_row(form.fName) }}
                </label>
                <label class="text-center">
                    {#<p>{{ 'Эл. почта'|trans }}</p>#}
                    {#{{ form_errors(form.email) }}#}
                    {{ form_row(form.email) }}
                </label>
                <label class="text-center">
                    {#{{ form_errors(form.plainPassword) }}#}
                    {{ form_widget(form.plainPassword) }}
                </label>
                <div class="gender">
                    <label><strong>{{ 'Пол'|trans }}</strong></label>
                    <div class="gender-inner">
                        {{ form_errors(form.gender) }}
                        {{ form_widget(form.gender) }}
                    </div>
                </div>
                <label>
                    <strong>{{ 'Подписка на новости'|trans }}</strong>
                    {{ form_errors(form.news) }}
                    {{ form_widget(form.news) }}
                </label>
                <div class="text-center">
                    <button class="reg-confirm">{{ 'save'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
