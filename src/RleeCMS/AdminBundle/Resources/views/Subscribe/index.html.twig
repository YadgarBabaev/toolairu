{% extends '::adminBase.html.twig' %}
{% block content_header %}
    <h1>
        Рассылки
        <small>Список</small>
    </h1>
{% endblock content_header %}
{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <a class="btn btn-primary" href="{{ path('admin_subscribe_new') }}">
                Добавить <i class="fa fa-fw fa-plus-square-o"></i>
            </a>
        </div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Тип</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for subscribe in subscribes %}
                <tr>
                    <td>{{ subscribe.id }}</td>
                    <td><a href="{{ path('admin_subscribe_edit', { 'id': subscribe.id }) }}">{{ subscribe }}</a></td>
                    <td>{{ type[subscribe.type] }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('admin_subscribe_send', { 'id': subscribe.id }) }}">Отправить <i class="fa fa-share-square-o"></i></a>
                        <a class="btn btn-danger" href="{{ path('admin_subscribe_delete', { 'id': subscribe.id }) }}">Удалить <i class="fa fa-fw fa-minus-square-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
