{% extends '::adminBase.html.twig' %}
{% block content_header %}
    <h1>
        Каталог
        <small>Категории</small>
    </h1>
{% endblock content_header %}
{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <a class="btn btn-primary" href="{{ path('admin_shop_category_new') }}">
                Добавить <i class="fa fa-fw fa-plus-square-o"></i>
            </a>
        </div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Родительский элемент</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td><a href="{{ path('admin_shop_category_edit', { 'id': category.id }) }}">{{ category.lavelName }}</a></td>
                    <td>{{ category.parent }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('admin_shop_shop_by_look', { 'id': category.id }) }}">Shop By Look <i class="fa fa-shopping-cart"></i></a>
                        <a class="btn btn-danger" href="{{ path('admin_shop_category_delete', { 'id': category.id }) }}">Удалить <i class="fa fa-fw fa-minus-square-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
