{% extends '::adminBase.html.twig' %}
{% block content_header %}
    <h1>
        Каталог
        <small>Фильтры</small>
    </h1>
{% endblock content_header %}
{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <a class="btn btn-primary" href="{{ path('admin_shop_settings_filter_new') }}">
                Добавить <i class="fa fa-fw fa-plus-square-o"></i>
            </a>
        </div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for filter in filters %}
                <tr>
                    <td>{{ filter.id }}</td>
                    <td>
                        <a href="{{ path('admin_shop_settings_filter_edit', { 'id': filter.id }) }}">{{ filter }}</a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                           href="{{ path('admin_shop_settings_filter_delete', { 'id': filter.id }) }}">Удалить <i
                                    class="fa fa-fw fa-minus-square-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
