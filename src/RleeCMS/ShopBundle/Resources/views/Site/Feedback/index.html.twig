{% extends "::base.html.twig" %}
{% block content %}
    <div class="reg-form">
        {% if flag %}
            <p>
                <strong>{{ 'Thanks! Your message has been sent successfully. We will contact with you soon.'|trans }}</strong>
                <a href="/{{ menu.alias }}.html" class="shop-btn shop-cart">{{ 'Send again' | trans }}</a>
            </p>
        {% else %}
            {{ form_start(form,{'attr': {'id' : 'feedback' }}) }}
            <div class="col-md-12">
                <div class="col-md-6">
                    <h3 class="text-center">{{ 'Feedback'|trans }}</h3>
                    <label class="text-left">
                        {{ form_row(form.name) }}
                    </label>
                    <label class="text-left">
                        {{ form_row(form.organization) }}
                    </label>
                    <label class="text-left">
                        {{ form_row(form.contact) }}
                    </label>
                    <label class="text-left">
                        {{ form_row(form.message) }}
                    </label>
                </div>
            </div>
            <div class="shopping-button" style="width: 300px;">
                <button type="submit" form="feedback" class="shop-btn shop-cart">
                    {{ 'Send' | trans }}
                </button>
            </div>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock content %}
