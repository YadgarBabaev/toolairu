<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootStyle.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/slick.css">

    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {#<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>#}
    {#<link rel="stylesheet" href="{{ asset('bundles/rleecmsadmin/bower_components/AdminLTE/bootstrap/css/bootstrap.min.css') }}">#}
</head>
<body>
{% block body %}
    <div class="wraper">
        <nav class="navbar">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"><img src="/images/logo.png" alt="Logo"></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {% block main_menu %}
                        {{ cms_widget('mainMenu') }}
                    {% endblock main_menu %}
                    {% block right_menu %}
                        <ul class="nav navbar-nav navbar-right">
                            <li class="navItemRight">
                                {{ render(controller('UserBundle:Currency:index')) }}
                            </li>
                            <li class="navItemRight">
                                <a class="nav-item-link" href="{{ path('fos_user_registration_register') }}">
                                    <img src="/images/registr.png"
                                         alt=""></a>
                            </li>
                            <li class="navItemRight">
                                <a class="nav-item-link" href="{{ path('fos_user_security_login') }}">
                                    <img src="/images/login.png"
                                         alt=""></a>
                            </li>
                            <li class="navItemRight">
                                <a id="wish-list" class="nav-item-link" href="{{ path('site_wish') }}"></a>
                            </li>
                            <li class="navItemRight">
                                <a class="nav-item-link cart-btn" id="nav-item-bag" href="#!">
                                    <span id="bag-list"></span>
                                    <span id="total-in-cart"></span>

                                </a>
                            </li>
                        </ul>

                        {{ cms_widget('right_menu') }}
                    {% endblock right_menu %}


                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        {% if cms_widget_count('carousel') > 0 %}
            {% block carousel %}
                {{ cms_widget('carousel') }}
            {% endblock carousel %}
        {% endif %}
        {% if cms_widget_count('pink') > 0 %}
            {% block pink %}
                {{ cms_widget('pink') }}
            {% endblock pink %}
        {% endif %}

        {% if cms_widget_count('category_left_1') > 0 or cms_widget_count('category_left_2') > 0 or cms_widget_count('category_right') > 0 %}
            <div class="category container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        {% if cms_widget_count('category_left_1') > 0 or cms_widget_count('category_left_2') > 0 %}
                            <div class="left-column">
                                {% block category_left_1 %}
                                    {{ cms_widget('category_left_1') }}
                                {% endblock category_left_1 %}
                                {% block category_left_2 %}
                                    {{ cms_widget('category_left_2') }}
                                {% endblock category_left_2 %}
                            </div>
                        {% endif %}
                        {% if cms_widget_count('category_right') > 0 %}
                            <div class="right-column">
                                {% block category_right %}
                                    {{ cms_widget('category_right') }}
                                {% endblock category_right %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
        <div id="content" class="content container-fluid">
            <div class="main">
                {#<div id="breadcrumb">#}
                {#{{ wo_render_breadcrumbs() }}#}
                {#</div>#}
                {% block content %}
                {% endblock content %}
            </div>
        </div>

    </div><!-- /.wraper -->
    <footer class="footer container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="inline-block copyright">Â© Copyright {{ "now"|date('Y') }} <br>
                    toolai-fashion.com
                </div>
                <div class="inline-block navbar-footer">
                    {{ cms_widget('footerMenu') }}
                </div>
                <div class="inline-block follou-us pull-right">
                    <div class="follow inline-block">{% trans %}Follow us{% endtrans %}:</div>
                    <ul class="list-unstyled inline-block list-inline">
                        <li class="nav-item">
                            <a class="nav-item-link" href="https://www.facebook.com/"
                               target="_blank">
                                <img src="/images/facebook.png" alt="FaceBook">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-link" href="https://www.instagram.com/" target="_blank">
                                <img
                                        src="/images/insta.png" alt="Instagramm"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-link" href="https://www.youtube.com/"
                               target="_blank"><img src="/images/youtube.png" alt="YouTube"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-link" href="https://www.tumblr.com/"
                               target="_blank"><img src="/images/tumblr.png" alt="Tumblr"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-link" href="https://pinterest.com/" target="_blank">
                                <img
                                        src="/images/pinterest.png" alt="Pinterest"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/slick.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/jquery.elevatezoom.js"></script>
    <script src="{{ asset('js/jquery.form.min.js') }}"></script>

{% endblock %}
{% block javascripts %}{% endblock %}
<div class="bag">
    {{ render(controller('RleeCMSShopBundle:Site/Cart:cart')) }}
</div>

</body>
</html>
